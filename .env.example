# AI Provider Configuration
# Choose between "groq" (cloud-based, requires API key) or "ollama" (local)
# Default: groq
AI_PROVIDER=groq

# Groq API Configuration (for cloud-based AI)
# Get your free API key at: https://console.groq.com/
# Only required if AI_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here

# Ollama Configuration (for local AI)
# Only required if AI_PROVIDER=ollama
# Default base URL: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
# Default model: llama3.1:8b (recommended for job extraction tasks)
# Other options: llama3.2:8b, llama3.1:70b, llama3.2:70b, mistral, etc.
OLLAMA_MODEL=llama3.1:8b

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG_MODE=True

# Excel File Path
# Path to the Excel file containing company data
EXCEL_FILE_PATH=data/Landratsamt.xlsx

# Processing Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# AI Rate Limiting
# Delay in seconds between AI API calls to avoid rate limiting
# Increase this value if you're hitting API rate limits
# For Ollama (local), you can set this to 0 or 1 since there's no rate limit
AI_RATE_LIMIT_DELAY=2
